<Window x:Class="ArcademiaGameLauncher.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcademiaGameLauncher"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ContentRendered="Window_ContentRendered"
        Background="Black"
        Title="Launcher"
        Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}"
        Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}">
    <!-- Declare the Launcher Version, Global Font and ToggleButton style -->
    <Window.Resources>
        <System:String x:Key="LauncherVersion">[v2.2.1-25 Release Build]</System:String>
        <System:String x:Key="YearStyle">yyyy</System:String>
        <System:Double x:Key="LogicalSizeWidth">1920</System:Double>
        <System:Double x:Key="LogicalSizeHeight">1080</System:Double>
        <Style x:Key="Early GameBoy">
            <Setter Property="TextElement.FontFamily"
                    Value="/Fonts/#Press Start 2P"/>
        </Style>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2"
                                SnapsToDevicePixels="true"
                                Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                StrokeThickness="1"
                                StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="ToggleButton.Static.Background"
                Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="ToggleButton.Static.Border"
                Color="#FF707070"/>
        <SolidColorBrush x:Key="ToggleButton.MouseOver.Background"
                Color="#777"/>
        <SolidColorBrush x:Key="ToggleButton.MouseOver.Border"
                Color="#FFF"/>
        <SolidColorBrush x:Key="ToggleButton.Pressed.Background"
                Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="ToggleButton.Pressed.Border"
                Color="#FF2C628B"/>
        <SolidColorBrush x:Key="ToggleButton.Disabled.Background"
                Color="#222"/>
        <SolidColorBrush x:Key="ToggleButton.Disabled.Border"
                Color="#FFF"/>
        <SolidColorBrush x:Key="ToggleButton.Disabled.Foreground"
                Color="#FFF"/>
        <Style x:Key="ToggleButtonStyle"
                TargetType="{x:Type ToggleButton}">
            <Setter Property="FontFamily"
                    Value="/Fonts/#Early GameBoy"/>
            <Setter Property="FocusVisualStyle"
                    Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background"
                    Value="{StaticResource ToggleButton.Static.Background}"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource ToggleButton.Static.Border}"/>
            <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Padding"
                    Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter"
                                    Focusable="False"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    Margin="{TemplateBinding Padding}"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed"
                                    Value="true">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.Pressed.Background}"/>
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                    Value="false">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.Disabled.Background}"/>
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground"
                                        TargetName="contentPresenter"
                                        Value="{StaticResource ToggleButton.Disabled.Foreground}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                    Value="true">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.MouseOver.Background}"/>
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsChecked"
                                    Value="true">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.MouseOver.Background}"/>
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource ToggleButton.MouseOver.Border}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Viewbox Stretch="Uniform"
            Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}"
            Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}">
        <StackPanel Background="Black">
            <!-- Template Element For Programatically creating Gifs programatically -->
            <Grid Width="0"
                    Height="0"
                    x:Name="GifTemplateElement_Parent">
                <Image gif:AnimationBehavior.CacheFramesInMemory="True"
                       gif:AnimationBehavior.SourceUri=""/>
            </Grid>

            <!-- Maintenance Screen -->
            <Grid x:Name="MaintenanceScreen"
                    Visibility="Collapsed"
                    Width="{StaticResource LogicalSizeWidth}"
                    Height="{StaticResource LogicalSizeHeight}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="1"
                        Text="Undergoing Maintenance"
                        Foreground="White"
                        FontSize="40"
                        Style="{StaticResource Early GameBoy}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="2"
                        Text="Please Wait"
                        Foreground="White"
                        FontSize="40"
                        Style="{StaticResource Early GameBoy}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
            </Grid>

            <!-- Start Menu -->
            <Grid x:Name="StartMenu"
                    Visibility="Collapsed"
                    Width="{StaticResource LogicalSizeWidth}"
                    Height="{StaticResource LogicalSizeHeight}">
                <Grid.Background>
                    <SolidColorBrush Color="Black"/>
                </Grid.Background>
                <Canvas Background="#333">
                    <Image x:Name="StartMenu_Image"
                           Width="{StaticResource LogicalSizeWidth}"
                           Height="{StaticResource LogicalSizeHeight}"
                           gif:AnimationBehavior.CacheFramesInMemory="True"
                           gif:AnimationBehavior.SourceUri="/Assets/Images/StartMenu_Background.gif"
                           Stretch="UniformToFill"/>

                    <Rectangle x:Name="StartMenu_Rect"
                               Fill="#000"
                               Width="800"
                               Height="{StaticResource LogicalSizeWidth}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>

                    <Image x:Name="StartMenu_ArcademiaLogo"
                           Source="/Assets/Images/Arcademia_Logo.png"
                           Width="594"
                           Height="298"
                           Stretch="Uniform"/>

                    <TextBlock x:Name="PressStartText"
                               Text="PRESS START"
                               Style="{StaticResource Early GameBoy}"
                               FontSize="42"
                               Foreground="White"
                               Height="44"
                               Width="480"/>
                </Canvas>
            </Grid>

            <!-- Home Menu -->
            <Grid x:Name="HomeMenu"
                    Visibility="Collapsed"
                    Width="{StaticResource LogicalSizeWidth}"
                    Height="{StaticResource LogicalSizeHeight}">
                <Grid.Background>
                    <SolidColorBrush Color="Black"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="11*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="2.5*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1"
                            Margin="100,0">
                        <Image x:Name="HomeMenu_ArcademiaLogo" Source="/Assets/Images/Arcademia_Logo.png"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"
                                Margin="100,0">
                            <TextBlock x:Name="GameLibraryText"
                                    Text="Games Library"
                                    Style="{StaticResource Early GameBoy}"
                                    FontSize="18"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Grid.Row="1"
                                Margin="100,0">
                            <TextBlock x:Name="InputMenuText"
                                    Text="Input Tester"
                                    Style="{StaticResource Early GameBoy}"
                                    FontSize="18"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Grid.Row="2"
                                Margin="100,0">
                            <TextBlock x:Name="AboutText"
                                    Text="About"
                                    Style="{StaticResource Early GameBoy}"
                                    FontSize="18"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Grid.Row="3"
                                Margin="100,0">
                            <TextBlock x:Name="ExitText"
                                    Text="Exit"
                                    Style="{StaticResource Early GameBoy}"
                                    FontSize="18"
                                    Foreground="White"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="4"
                            Margin="75,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock Text="Controls"
                                    Foreground="White"
                                    FontSize="18"
                                    Style="{StaticResource Early GameBoy}"
                                    VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Border BorderThickness="0,0,1,0">
                                    <Border.BorderBrush>
                                        <DrawingBrush Viewport="0,0,16,8"
                                                ViewportUnits="Absolute"
                                                TileMode="Tile">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="#777">
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup>
                                                                <RectangleGeometry Rect="0,0,50,50"/>
                                                                <RectangleGeometry Rect="50,50,50,50"/>
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Border.BorderBrush>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <!-- Up Control -->
                                        <Grid Grid.Row="0"
                                                Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Up Key -->
                                            <Grid Grid.Column="0"
                                                    Margin="5,0">
                                                <Ellipse Fill="#777"
                                                         Height="40"
                                                         Width="40"
                                                         StrokeThickness="2"
                                                         Stroke="#777"
                                                         Margin="2,3,0,0"/>
                                                <Ellipse Fill="#000"
                                                         Height="38"
                                                         Width="38"
                                                         StrokeThickness="4"
                                                         Stroke="#777"
                                                         Margin="0,0,2,3"/>
                                                <TextBlock Text="&#10132;"
                                                        Foreground="White"
                                                        FontSize="24"
                                                        Style="{StaticResource Early GameBoy}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,10,4">
                                                    <TextBlock.LayoutTransform>
                                                        <RotateTransform Angle="270"/>
                                                    </TextBlock.LayoutTransform>
                                                </TextBlock>
                                            </Grid>
                                            <!-- Up Text -->
                                            <Grid Grid.Column="1"
                                                    Margin="10,0">
                                                <TextBlock Text="Up"
                                                        Foreground="White"
                                                        FontSize="14"
                                                        Style="{StaticResource Early GameBoy}"
                                                        VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                        <!-- Down Control -->
                                        <Grid Grid.Row="1"
                                                Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Down Key -->
                                            <Grid Grid.Column="0">
                                                <Ellipse Fill="#777"
                                                         Height="40"
                                                         Width="40"
                                                         StrokeThickness="2"
                                                         Stroke="#777"
                                                         Margin="2,3,0,0"/>
                                                <Ellipse Fill="#000"
                                                         Height="38"
                                                         Width="38"
                                                         StrokeThickness="4"
                                                         Stroke="#777"
                                                         Margin="0,0,2,3"/>
                                                <TextBlock Text="&#10132;"
                                                        Foreground="White"
                                                        FontSize="24"
                                                        Style="{StaticResource Early GameBoy}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,-4,4">
                                                    <TextBlock.LayoutTransform>
                                                        <RotateTransform Angle="90"/>
                                                    </TextBlock.LayoutTransform>
                                                </TextBlock>
                                            </Grid>
                                            <!-- Down Text -->
                                            <Grid Grid.Column="1"
                                                    Margin="10,0">
                                                <TextBlock Text="Down"
                                                        Foreground="White"
                                                        FontSize="14"
                                                        Style="{StaticResource Early GameBoy}"
                                                        VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Border BorderThickness="1,0,0,0">
                                    <Border.BorderBrush>
                                        <DrawingBrush Viewport="0,0,8,8"
                                                ViewportUnits="Absolute"
                                                TileMode="Tile">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="#777">
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup>
                                                                <RectangleGeometry Rect="0,0,50,50"/>
                                                                <RectangleGeometry Rect="50,50,50,50"/>
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Border.BorderBrush>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <!-- Start Control -->
                                        <Grid Grid.Row="0"
                                                Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="5*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Start Key -->
                                            <Grid Grid.Column="0">
                                                <Ellipse Fill="#FF217300"
                                                         Height="40"
                                                         Width="40"
                                                         StrokeThickness="5"
                                                         Stroke="#FF217300"
                                                         Margin="2,3,0,0"/>
                                                <Ellipse Fill="#FF42E600"
                                                         Height="38"
                                                         Width="38"
                                                         StrokeThickness="3"
                                                         Stroke="#FF42E600"
                                                         Margin="0,0,2,3"/>
                                                <TextBlock Text="A"
                                                        Foreground="White"
                                                        FontSize="16"
                                                        Style="{StaticResource Early GameBoy}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,2,4"/>
                                            </Grid>
                                            <!-- Start Text -->
                                            <Grid Grid.Column="1"
                                                    Margin="10,0">
                                                <TextBlock Text="Select"
                                                        Foreground="White"
                                                        FontSize="12"
                                                        Style="{StaticResource Early GameBoy}"
                                                        VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="5"
                            Margin="74,25">
                        <TextBlock x:Name="Copyright"
                                Text="Copyright ©️ 2018 - Now University of Lincoln, All rights reserved."
                                Foreground="#777"
                                FontSize="14"
                                Style="{StaticResource Early GameBoy}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                TextWrapping="Wrap"
                                LineHeight="20"/>
                    </Grid>
                    <Grid Grid.Row="6"
                            Margin="50,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                Text="[Research-Arcade-Launcher]"
                                Foreground="#777"
                                FontSize="8"
                                Style="{StaticResource Early GameBoy}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="1"
                                Text="  Developed by Matthew Freeman"
                                Foreground="#777"
                                FontSize="8"
                                Style="{StaticResource Early GameBoy}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="2"
                                Text="Based on [arcade-ui-kiosk]"
                                Foreground="#444"
                                FontSize="8"
                                Style="{StaticResource Early GameBoy}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="3"
                                Text="  Developed by Benjamin Williams"
                                Foreground="#444"
                                FontSize="8"
                                Style="{StaticResource Early GameBoy}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="5"
                                Text="{StaticResource LauncherVersion}"
                                Foreground="#777"
                                FontSize="8"
                                Style="{StaticResource Early GameBoy}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"/>
                    </Grid>
                </Grid>
                <Grid x:Name="HomeMenuImageArea"
                        Grid.Column="1">
                    <Canvas>
                        <Grid x:Name="HomeImage"
                                Visibility="Visible"
                                Background="#333"
                                Height="{StaticResource LogicalSizeHeight}">
                            <Image Source="/Assets/Images/ThumbnailPlaceholder.png"
                                   Stretch="UniformToFill"/>
                        </Grid>
                        <!-- Lock width of Credits Panel to the Width of HomeMenuImageArea -->
                        <Grid x:Name="CreditsPanel"
                                Visibility="Collapsed"
                                Canvas.Top="{StaticResource LogicalSizeHeight}"
                                Width="{Binding ElementName=HomeMenuImageArea, Path=ActualWidth}"
                                Margin="50,0,0,0"/>
                        <Image x:Name="UoL_Logo"
                                Source="/Assets/Images/uolwhite.png"
                                Visibility="Collapsed"
                                Opacity="0.8"
                                Width="150"
                                Canvas.Bottom="10"
                                Canvas.Right="10"
                                Stretch="Uniform"/>
                        <Image x:Name="intlab_Logo"
                                Source="/Assets/Images/intlab.png"
                                Visibility="Collapsed"
                                Opacity="0.8"
                                Width="150"
                                Canvas.Bottom="10"
                                Canvas.Right="170"
                                Stretch="Uniform"/>
                        <Image x:Name="CSS_Logo"
                                Source="/Assets/Images/css.png"
                                Visibility="Collapsed"
                                Opacity="0.8"
                                Width="150"
                                Canvas.Bottom="10"
                                Canvas.Right="330"
                                Stretch="Uniform"/>
                    </Canvas>
                </Grid>
            </Grid>

            <!-- Input Tester -->
            <Grid x:Name="InputMenu"
                    Visibility="Collapsed"
                    Width="{StaticResource LogicalSizeWidth}"
                    Height="{StaticResource LogicalSizeHeight}">
                <Grid.Background>
                    <SolidColorBrush Color="Black"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="Hold Exit to go back"
                            Foreground="White"
                            FontSize="20"
                            Style="{StaticResource Early GameBoy}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="20"/>
                    <TextBlock x:Name="InputMenu_HoldBackCountdownText"
                            Text=""
                            Foreground="Red"
                            FontSize="20"
                            Style="{StaticResource Early GameBoy}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="20,50"/>
                    <TextBlock Text="Input Tester"
                            Foreground="White"
                            FontSize="40"
                            Style="{StaticResource Early GameBoy}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0"
                            Margin="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Ellipse x:Name="InputMenu_P1_Exit"
                                     Fill="#F00"
                                     Height="75"
                                     Width="75"
                                     StrokeThickness="5"
                                     Stroke="#B00"
                                     Margin="0,0,175,325"/>
                            <TextBlock x:Name="InputMenu_P1_ExitText"
                                       Text="Exit"
                                       Foreground="White"
                                       FontSize="20"
                                       Style="{StaticResource Early GameBoy}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,175,450"/>
                            <Ellipse x:Name="InputMenu_P1_Start"
                                     Fill="#F00"
                                     Height="75"
                                     Width="75"
                                     StrokeThickness="5"
                                     Stroke="#B00"
                                     Margin="175,0,0,325"/>
                            <TextBlock x:Name="InputMenu_P1_StartText"
                                       Text="Start"
                                       Foreground="White"
                                       FontSize="20"
                                       Style="{StaticResource Early GameBoy}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="175,0,0,450"/>
                            <Ellipse x:Name="InputMenu_P1_Joy"
                                     Fill="#F00"
                                     Height="100"
                                     Width="100"
                                     StrokeThickness="5"
                                     Stroke="#B00"
                                     Margin="0,0,0,0"/>
                            <TextBlock x:Name="InputMenu_P1_Joy_UpText"
                                       Text=">"
                                       Foreground="White"
                                       FontSize="50"
                                       Style="{StaticResource Early GameBoy}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="5,0,0,200">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                            <TextBlock x:Name="InputMenu_P1_Joy_RightText"
                                       Text=">"
                                       Foreground="White"
                                       FontSize="50"
                                       Style="{StaticResource Early GameBoy}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="200,5,0,0"/>
                            <TextBlock x:Name="InputMenu_P1_Joy_DownText"
                                       Text=">"
                                       Foreground="White"
                                       FontSize="50"
                                       Style="{StaticResource Early GameBoy}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,200,8,0">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                            <TextBlock x:Name="InputMenu_P1_Joy_LeftText"
                                       Text=">"
                                       Foreground="White"
                                       FontSize="50"
                                       Style="{StaticResource Early GameBoy}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,200,8">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="180"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBlock Text="Player 1"
                                    Foreground="White"
                                    FontSize="28"
                                    Style="{StaticResource Early GameBoy}"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center"
