                        Background="Black"
                        Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <!-- Game Image -->
                    <Grid Grid.Row="0"
                            Background="Black">
                        <Border BorderThickness="5"
                                BorderBrush="#FFF"
                                Margin="25">
                            <Image x:Name="NonGif_GameThumbnail"
                                   Source="/Assets/Images/ThumbnailPlaceholder.png"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderThickness="5"
                                BorderBrush="#FFF"
                                Margin="25">
                            <Image x:Name="Gif_GameThumbnail"
                                   gif:AnimationBehavior.CacheFramesInMemory="True"
                                   gif:AnimationBehavior.SourceUri="/Assets/Images/ThumbnailPlaceholder.png"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1"
                            Background="Black">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2.5*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1.25*"/>
                        </Grid.RowDefinitions>

                        <!-- Game Title -->
                        <Grid Grid.Row="0"
                                Margin="50,5">
                            <TextBlock x:Name="GameTitle"
                                    Text="Select A Game"
                                    Foreground="White"
                                    FontSize="32"
                                    TextWrapping="WrapWithOverflow"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource Early GameBoy}"/>
                        </Grid>

                        <!-- Game Author(s) -->
                        <Grid Grid.Row="1"
                                Margin="50,0">
                            <TextBlock x:Name="GameAuthors"
                                    Text=""
                                    Foreground="#777"
                                    FontSize="14"
                                    Style="{StaticResource Early GameBoy}"
                                    TextWrapping="Wrap"
                                    LineHeight="15"/>
                        </Grid>

                        <!-- Game Tag(s) -->
                        <WrapPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="50,0">
                            <WrapPanel.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="Margin"
                                            Value="2"/>
                                </Style>
                            </WrapPanel.Resources>

                            <Border x:Name="GameTagBorder0"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag0"
                                        Text="Tag 1"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder1"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag1"
                                        Text="Tag 2"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder2"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag2"
                                        Text="Tag 3"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder3"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag3"
                                        Text="Tag 4"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder4"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag4"
                                        Text="Tag 5"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder5"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag5"
                                        Text="Tag 6"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder6"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag6"
                                        Text="Tag 7"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder7"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag7"
                                        Text="Tag 8"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>

                            <Border x:Name="GameTagBorder8"
                                    BorderThickness="1"
                                    BorderBrush="#777"
                                    Visibility="Hidden">
                                <TextBlock x:Name="GameTag8"
                                        Text="Tag 9"
                                        Foreground="#777"
                                        FontSize="8"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource Early GameBoy}"/>
                            </Border>
                        </WrapPanel>
                    </Grid>
                    <!-- Game Description -->
                    <Grid Grid.Row="2"
                            Background="Black"
                            Margin="50,25">
                        <TextBlock x:Name="GameDescription"
                                Text="Select a game using the joystick and by pressing A."
                                Foreground="White"
                                FontSize="14"
                                Style="{StaticResource Early GameBoy}"
                                TextWrapping="Wrap"
                                LineHeight="20"/>
                    </Grid>
                    <!-- Game Start/Update -->
                    <Grid Grid.Row="3"
                            Background="Black"
                            Margin="25">
                        <ToggleButton x:Name="StartButton"
                                Content="Checking For Updates..."
                                Click="StartButton_Click"
                                Style="{StaticResource ToggleButtonStyle}"
                                FontSize="20"
                                Background="#222"
                                Foreground="White"
                                BorderBrush="White"
                                BorderThickness="3"/>
                    </Grid>
                    <!-- Game Version -->
                    <Grid Grid.Row="4"
                            Background="Black"
                            Margin="25,0">
                        <TextBlock x:Name="VersionText"
                                Text="0.0.0"
                                Foreground="White"
                                FontSize="10"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Style="{StaticResource Early GameBoy}"/>
                    </Grid>
                </Grid>
            </Grid>
        </StackPanel>
    </Viewbox>
</Window>
